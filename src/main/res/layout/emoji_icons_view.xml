<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<nnl.keyboard.EmojiIconsTabBar
		android:id="@+id/emojis_tab"
		android:layout_width="match_parent"
		android:layout_height="40dip"
		android:layout_alignParentTop="true">

		<TextView
			android:id="@+id/tab_emoji_recents"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>

		<TextView
			android:id="@+id/tab_emoji_faces"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>

		<TextView
			android:id="@+id/tab_emoji_objects"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>

		<TextView
			android:id="@+id/tab_emoji_nature"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>

		<TextView
			android:id="@+id/tab_emoji_places"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>

		<TextView
			android:id="@+id/tab_emoji_symbols"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>

		<TextView
			android:id="@+id/tab_emoji_emoticons"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			style="?android:attr/imageButtonStyle"
			android:text="emoji_symbols"
			android:textColor="#FFFFFF"
			android:textSize="30dp"
			android:background="@drawable/emoji_tab_button"
			android:contentDescription="@null"/>
	</nnl.keyboard.EmojiIconsTabBar>

	<View
		android:id="@+id/upperline"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#ffff00"
		android:layout_below="@+id/emojis_tab"/>

	<android.support.v4.view.ViewPager
		android:id="@+id/emojis_pager"
		android:layout_below="@+id/upperline"
		android:layout_above="@+id/emojiBottomLayout"
		android:layout_width="match_parent"
		android:layout_weight="4"
		android:layout_height="match_parent"/>

	<LinearLayout
		android:layout_height="35dp"
		android:id="@+id/emojiBottomLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:background="@drawable/emoji_btn_bg"
		android:layout_weight="1"
		android:gravity="top|left"
		android:layout_alignParentBottom="true">

		<ImageButton
			android:background="@null"
			android:layout_height="match_parent"
			android:src="@drawable/kb_hide"
			android:tag="2300"
			android:layout_width="0dp"
			android:layout_weight="2"/>

		<Button
			android:background="@null"
			android:textColor="#fff"
			android:text="SPACE"
			android:layout_height="match_parent"
			android:tag="32"
			android:layout_width="0dp"
			android:layout_weight="6"/>

		<ImageButton
			android:background="@null"
			android:layout_height="match_parent"
			android:src="@drawable/back_space"
			android:tag="-5"
			android:layout_width="0dp"
			android:layout_weight="2"/>

	</LinearLayout>

</RelativeLayout>

